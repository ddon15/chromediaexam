{% extends '::base.html.twig' %}

{% block title %}Login{% endblock %}
{% block css %}<link href="{{ asset('css/user.css') }}" rel="stylesheet"> {% endblock %}

{% block body %}
	{% if error == 0 %}
		<div class="alert alert-success">Hello. Click here to <a href="signup"> Sign up</a> or <a href="forgotpw"> Forgot Password</a></div> 
	{% elseif error == 4 %}  
		<div class="alert alert-success">You have successfully activated your account. Login now!</div> 
	{% elseif error == 5 %}  
		<div class="alert alert-danger">Your account is not yet activated. Please check your email.</div> 
	{% else %}
		{% set error = 0 %} 
		<div class="alert alert-danger">Invalid Email or Password</a></div> 
	{% endif %}
{% endblock %}

{% block loginform %}
	<form action="{{ path('checkuser') }}" class="navbar-form navbar-right" method="post" {{ form_enctype(form) }}>
	<div class="form-group">
        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'} }) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'placeholder': 'Password'} }) }}
    </div>
	<input type="submit" class="btn btn-success"/>
</form>
{% endblock %}
