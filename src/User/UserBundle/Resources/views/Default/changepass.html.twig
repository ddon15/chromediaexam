{% extends '::dashboard.html.twig' %}

{% block title %}Sign Up{% endblock %}
{% block css %}<link href="{{ asset('css/user.css') }}" rel="stylesheet"> {% endblock %}

{% block body %}
<div class="col-md-6">
	<form action="{{ path('changepass') }}" class="form" id="formChangePass" method="POST" {{ form_enctype(form) }}>
       {% if error == 1 %}
       <div class="alert alert-danger">
       		Current password is invalid
       </div>
       	{% elseif error == 2  %}
       	<div class="alert alert-danger" id="">
       	  Password does not match
       	</div>
        {%  elseif error == 0 %}
        <div class="alert alert-success">
          Password successfully changed
        </div>
        {% else %}
         <div class="alert alert-success">
          Change your password
        </div>
       	{% endif %}
    <div class="form-group">
        <label for="exampleInputEmail1">Current Password</label>
        {{ form_widget(form.curpassword, { 'attr': {'class': 'form-control', 'placeholder': 'Current Password' , 'value' : password} }) }}
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">New Password</label>
        {{ form_widget(form.newpassword, { 'attr': {'class': 'form-control', 'placeholder': 'New password'} }) }}
    </div>
     <div class="form-group">
        <label for="exampleInputEmail1">Confirm Password</label>
        {{ form_widget(form.conpassword, { 'attr': {'class': 'form-control', 'placeholder': 'Confirm password'} }) }}
    </div>
	<input type="submit" class="btn btn-success pull-right" value="Update Password"/>
	</form>
</div>
{% endblock %}
